.container {
  background-color: #f4f4f4;
  color: #222222;
  font-size: 28rpx;
}

.db {
  display: block;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.mt20 {
  margin-top: 20rpx;
}

.pt90 {
  padding-top: 90rpx;
}

.w-fill {
  width: 100%;
}

.c-red {
  color: #b93321;
}

.hidde {
  display: none;
}

.show {
  display: block;
}

.c-book-section .title {
  display: block;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-align: left;
  font-weight: 500;
  background: #ffffff;
  padding: 0 30rpx;
}

.c-book-section .title .more {
  top: 0; 
  right: 30rpx;
  position: absolute;
  font-size: 28rpx;
  text-align: center;
  /* color: #b93321; */
  font-weight: 400;
}

.c-book-section .title .more .arrow-icon {
  padding-left: 5rpx;
  font-size: 30rpx;
  font-weight: 200;
  float: right;
  transform: rotate(-90deg);
  top: 26rpx;
  position: relative;
  background-size: 80%;
  width: 24rpx;
  background-position: 50% 100%;
}

.c-book-section .title::before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #b93321;
}

.arrow {
  display: block;
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,);
  background-size: 60%;
  background-repeat: no-repeat;
  background-position: 50%;
}