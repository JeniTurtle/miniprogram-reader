@import "/templates/booklist/booklist.wxss";

.c-book-section {
  padding-top:30rpx;
}

.top-search {
  position: relative;
  height: 78rpx;
  background: #fff;
  padding: 22rpx 30rpx 0;
}

.top-search .search-input {
    height: 64rpx;
    line-height: 64rpx;
    padding-left: 20rpx;
    border: 1px solid #eaeaea;
    border-radius: 2px;
    -webkit-appearance: none;
    margin-right: 90rpx;
}

.top-search .search-btn {
    position: absolute;
    top: 22rpx;
    right: 25rpx;
    width: 100rpx;
    height: 68rpx;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
    border-left: none;
    background: #c9b388;
    text-align: center;
    z-index: 100;
}

.top-search .search-btn .img {
  padding-top: 14rpx;
  width: 46rpx;
  height: 46rpx;
}

.null-data {
  text-align: center;
  background: #fff;
  color: #999;
  padding-top: 40rpx;
}

.null-img {
  width: 200rpx;
  height: 200rpx;
}

.null-text {
  display: block;
  padding-top: 20rpx;
  font-weight: 300;
}

.pt0 {
  padding-top: 0;
}