.bottom-controll-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    -webkit-transform: translateY(320rpx);
    transform: translateY(320rpx);
    opacity: 0;
    z-index: 21;
    height: 330rpx;
    padding: 40rpx;
    background-color: rgba(50,51,52,.9);
    transition: all .2s ease;
    width:100%;
    box-sizing:border-box;
}
.bottom-controll-panel.show-panel {
    -webkit-transform: translateY(0);
    transform: translateY(0);
    opacity: 1;
}

.bottom-controll-panel .item {
    position: relative;
    height: 60rpx;
    margin-bottom: 40rpx;
    font-weight: 300;
}

.bottom-controll-panel .item .btn {
    display: inline-block;
    vertical-align: middle;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 2px;
    color: #fff;
}

.bottom-controll-panel .item .disable {
    background-color: transparent;
    color: #888;
}

.bottom-controll-panel .item .font-btn-w {
    width: 64rpx;
    font-size: 40rpx;
    font-weight: 300;
}

.bottom-controll-panel .item .progress-bar {
    width: 480rpx;
    height: 4rpx;
    background: #b2b2b2;
    border-radius: 10px;
    margin: 0 30rpx;
}

.bottom-controll-panel .item .progress-bar .content {
    width: 25%;
    height: 4rpx;
    display: block;
    background: #b93221;
    border-radius: 20rpx;
}

.bottom-controll-panel .item .font-btn-w {
    width: 64rpx;
    font-size: 38rpx;
}

.bottom-controll-panel .item .square {
    width: 29.29%;
    color: #fff;
    border: 1px solid #535353;
    border-radius: 8rpx;
    font-size: 25rpx;
}

.bottom-controll-panel .item .square.active {
    color: #b93221;
    border: 1px solid #b93221;
}

.bottom-controll-panel .item .square:nth-of-type(2) {
    margin: 0 5%;
}

.bottom-controll-panel .item .chapter-btn-w {
    width: 100rpx;
    font-size: 26rpx;
}

.bottom-controll-panel .item .directory {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #a8a8a8;
    text-align: center;
    font-size: 30rpx;
    position: absolute;
    left: 50%;
    margin-left: -100rpx;
}

.bottom-controll-panel .toBookShelf {
    position: absolute;
    width: 170rpx;
    height: 60rpx;
    background: rgba(50,51,52,.9);
    border-radius: 30rpx 0 0 30rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 60rpx;
    padding-left: 38rpx;
    top: -106rpx;
    right: 0;
    box-sizing: border-box;
    font-weight: 300;
}